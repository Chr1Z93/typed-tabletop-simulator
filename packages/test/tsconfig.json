  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "lib": ["ESNext"],
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "types": [
      "typescript-to-lua/language-extensions",
      "@typed-tabletop-simulator/declaration"
